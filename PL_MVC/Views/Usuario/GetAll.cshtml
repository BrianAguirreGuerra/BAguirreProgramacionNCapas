@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #da370a;
        -webkit-transition: .4s;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            -webkit-transition: .4s;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #00ff08;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #00ff08;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    .slider.round {
        border-radius: 34px;
    }

        .slider.round:before {
            border-radius: 50%;
        }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Usuarios</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 col-md-offset-11">
            @Html.ActionLink("+", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
    @if (Model.Usuarios.Count > 0)
    {
        <br />
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-responsive">
                    <thead>
                        <tr>
                            <td align="center">Editar</td>
                            <td class="hidden">IdUsuario</td>
                            <td align="center">UserName</td>
                            <td align="center">Nombre</td>
                            <td align="center">Email</td>
                            <td align="center" class="hidden">Password</td>
                            <td align="center">Sexo</td>
                            <td align="center">Telefono</td>
                            <td align="center">Celular</td>
                            <td align="center">CURP</td>
                            <td align="center">Fecha de Nacimiento</td>
                            <td align="center" class="hidden">Id Rol</td>
                            <td align="center">Rol</td>
                            <td align="center">Imagen</td>
                            <td align="center">Estatus</td>
                            <td align="center">Id Usuario Modificado</td>
                            <td align="center">Fecha Creacion</td>
                            <td align="center">Fecha Modificacion</td>
                            <td align="center">Eliminar</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ML.Usuario usuario in Model.Usuarios)
                        {
                            <tr>
                                <td align="center"><a class="btn btn-warning glyphicon glyphicon-pencil" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario})"></a></td>
                                <td align="center" class="hidden">@usuario.IdUsuario</td>
                                <td align="center">@usuario.UserName</td>
                                <td align="center">@usuario.Nombre @usuario.ApellidoPaterno @usuario.ApellidoMaterno</td>
                                <td align="center">@usuario.Email</td>
                                <td align="center" class="hidden">@usuario.Password</td>
                                <td align="center">@usuario.Sexo</td>
                                <td align="center">@usuario.Telefono</td>
                                <td align="center">@usuario.Celular</td>
                                <td align="center">@usuario.CURP</td>
                                <td align="center">@usuario.FechaNacimiento</td>
                                <td class="hidden">@usuario.Rol.IdRol</td>
                                <td align="center">@usuario.Rol.Nombre</td>
                                <td align="center">
                                    @if (usuario.Imagen != null)
                                    {
                                        <img src="data:image/jpg;base64, @Convert.ToBase64String(usuario.Imagen)" style="width: 200px; height: 200px;" />
                                    }
                                    else
                                    {
                                        <img src="~/Images/Usuario.png" style="width: 200px; height: 200px;" />
                                    }
                                </td>
                                <td align="center">
                                    <label class="switch">
                                        @if (usuario.Estatus)
                                        {
                                            <input type="checkbox" checked="checked" onchange="UpdateStatus(@usuario.IdUsuario, this);">
                                        }
                                        else
                                        {
                                            <input type="checkbox" onchange="UpdateStatus(@usuario.IdUsuario, this);">
                                        }


                                        @*<input type="checkbox" @(usuario.Estatus==true)? "checked='checked'":"" onchange="UpdateStatus(@usuario.IdUsuario, this);">*@



                                        <span class="slider round"></span>
                                    </label>
                                </td>
                                <td align="center">@usuario.IdUsuarioModificado</td>
                                <td align="center">@usuario.FechaCreacion</td>
                                <td align="center">@usuario.FechaModificacion</td>
                                <td align="center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new {usuario.IdUsuario}, null)" onclick="return confirm('Estas seguro que deseas eliminar el registro?' );"></a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">No hay usuarios registrados. Da click en + para agregar un nuevo registro</div>
    }
</div>

<script>
    function UpdateStatus(IdUsuario, estatus) {
        var Estatus = estatus.checked
            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateStatus")',
                dataType: 'json',
                data: { IdUsuario, Estatus },
                success: function (resultEstatus) {
                    if (resultEstatus.Correct == true) {
                        alert('Se ha actualizado correctamente el status del usuario')
                    }
                    else {
                        alert('No se pudo actualizar correctamente el status' + resultEstatus.ErrorMessage)
                    }
                },
                error: function (ex) {
                    alert('Failed.' + ex);
                }
            });
        }
</script>
